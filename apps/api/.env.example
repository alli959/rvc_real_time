APP_NAME=VoiceForge
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Blade admin UI domain (routes/web.php)
ADMIN_DOMAIN=admin.localhost

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=morphvox
DB_USERNAME=morphvox
DB_PASSWORD=secret

# Redis (queues + cache)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Object Storage (S3/MinIO)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=voiceforge
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# =============================================================================
# Voice Services
# =============================================================================

# Voice Engine Service (HTTP API for voice inference)
VOICE_ENGINE_URL=http://voice-engine:8001

# Voice Engine WebSocket (real-time streaming)
VOICE_ENGINE_SOCKET_URL=ws://voice-engine:8765

# Trainer Service (RVC model training)
TRAINER_URL=http://trainer:8002

# Preprocessor Service (audio preprocessing/feature extraction)
PREPROCESSOR_URL=http://preprocess:8003

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/oauth/google/callback"

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="${APP_URL}/api/oauth/github/callback"
